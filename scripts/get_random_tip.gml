var rand_value = irandom(3);
if (rand_value == 0)
    return "Tip: traps placed (with Q/U) will appear after a few seconds.";
else if (rand_value == 1)
    return "Tip: unfriendly forts fire at you, but you can capture them.";
else if (rand_value == 2)
    return "Tip: ships take more damage when rammed at their sides.";
else if (rand_value == 3)
    return "Tip: press E/O to use your ship's special ability!";
